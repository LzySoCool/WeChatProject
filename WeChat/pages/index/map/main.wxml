<view class="container">
  <map id="myMap" class="map" longitude="{{longitudeInit}}" latitude="{{latitudeInit}}" circles="{{circles}}" 
  markers="{{markers}}" bindregionchange="regionchange" style="width:{{map_width}}px;height:{{map_height}}px"show-location/>
    <view class="scopeV">
      <label>输入搜索范围：</label>
      <input style="width:50px;" value='{{radius}}' bindinput="scopeSelect"></input>
      <label>km</label>
    </view>
    <view class="taskBtnV">
      <button class='taskBtn' type="primary" bindtap='taskList'>查看该区域任务列表</button>
    </view>
